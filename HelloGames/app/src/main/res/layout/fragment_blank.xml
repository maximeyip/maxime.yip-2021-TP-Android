<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".BlankFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:text="Game Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp" android:textSize="50sp"/>
    <ImageView
            android:src="@android:drawable/ic_menu_report_image"
            android:layout_width="136dp"
            android:layout_height="136dp" android:id="@+id/image_game"
            android:layout_marginTop="150dp" android:scrollbarSize="4dp" android:layout_marginLeft="50dp"/>
    <TextView
            android:text="Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginLeft="200dp"
            android:layout_marginTop="170dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/game_name" android:layout_marginLeft="250dp"
            android:layout_marginTop="170dp"/>
    <TextView
            android:text="Type : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginLeft="200dp"
            android:layout_marginTop="200dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/game_type" android:layout_marginLeft="250dp"
            android:layout_marginTop="200dp"/>
    <TextView
            android:text="Nb Players: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginLeft="200dp"
            android:layout_marginTop="230dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nb_player" android:layout_marginLeft="278dp"
            android:layout_marginTop="230dp"/>
    <TextView
            android:text="Year :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_marginLeft="200dp"
            android:layout_marginTop="260dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/year_game" android:layout_marginLeft="240dp"
            android:layout_marginTop="260dp"/>
    <TextView
            android:layout_width="309dp"
            android:layout_height="110dp" android:id="@+id/resume_game" android:layout_marginLeft="50dp"
            android:layout_marginTop="350dp"/>
    <Button
            android:text="DO YOU WANT TO KNOW MORE ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/url_more" android:layout_marginLeft="90dp"
            android:layout_marginTop="520dp"/>

</FrameLayout>